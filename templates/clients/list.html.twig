{% block body %}

<div class="example-wrapper">
    <h1>Lista kontrahent√≥w</h1>

    <table class="tg">
    <thead>
      <tr>
        <th class="tg-5qug">Lp.</th>
        <th class="tg-5qug">Nip</th>
        <th class="tg-5qug">Regon</th>
        <th class="tg-5qug">Nazwa</th>
        <th class="tg-5qug">VAT</th>
        <th class="tg-5qug">Ulica</th>
        <th class="tg-5qug">Nr domu</th>
        <th class="tg-5qug">Nr lokalu</th>
        <th class="tg-5qug">Kontakt</th>
        <th class="tg-5qug">Komentarz</th>
        <th class="tg-5qug">Akcje</th>
      </tr>
    </thead>
    <tbody>
      {% for v in clients %}
          <tr class= {{ loop.index is divisible by 2 ? "tg-m9r4" : "tg-w747" }}>
              <td>{{ loop.index }}</td>
              <td>{{ v.nip }}</td>
              <td>{{ v.regon }}</td>
              <td>{{ v.name }}</td>
              <td>{{ v.vat }}</td>
              <td>{{ v.street }}</td>
              <td>{{ v.houseNo }}</td>
              <td>{{ v.flatNo }}</td>
              <td>{{ v.firstContactDate|format_datetime('long', 'none', locale='pl') }}</td>
              <td>{{ v.comments }}</td>
              <td>
                <a href="{{ path('app_client_show', {'id': v.id}) }}">show</a>
                <a href="{{ path('app_client_edit', {'id': v.id}) }}">edit</a>
              </td>
          </tr>
      {% endfor %}
    </tbody>
    </table>

    <p>Wybierz kolory tabeli:</p>

    <div>
        <input type="color" id="odd-row" name="odd-row"
                value="#ffffc7">
        <label for="body">Wiersze nieparzyste</label>
    </div>

    <div>
        <input type="color" id="even-row" name="even-row"
               value="#dae8fc">
        <label for="head">Wiersze parzyste</label>
    </div>

</div>
{% endblock %}
